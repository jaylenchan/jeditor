{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "preserve",
		"lib": ["ESNext", "DOM"],
		"baseUrl": ".",
		"paths": {
			"core/*": ["src/core/*"],
			"extensions/*": ["src/extensions/*"],
			"common/*": ["src/common/*"],
			"src/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"types": ["reflect-metadata"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
